<% if(productos.length !==0) { %>        
        <h1 style="color: blue;">Vista de Productos</h1>
        <br>
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                    <% for (const producto in productos){ %>
                        <tr> 
                            <td><%=productos[producto].title %></td>
                            <td><%=productos[producto].price%></td>
                            <td><img width="50" src=<%=productos[producto].thumbnail%> alt="not found"></td>
                        </tr>
                    <% } %>
                </table>
            </div>
            <a href="http://localhost:8080/"><button class="buttonVista">Formulario</button></a>
<% } else { %>
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    <a href="http://localhost:8080/"><button class="buttonVista">Formulario</button></a>
<% }%>

    
        